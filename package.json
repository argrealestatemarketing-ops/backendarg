{
  "name": "hr-attendance-backend",
  "version": "1.1.0",
  "description": "HR & Attendance Management Backend API - Production Ready",
  "main": "server.js",
  "scripts": {
    "smoke": "cross-env NODE_ENV=test node smoke-tests/smoke.js",
    "smoke:ci": "cross-env BASE_URL=http://localhost:39772 npm run smoke",
    "smoke:prod": "cross-env BASE_URL=https://your-production-url.com npm run smoke",
    "test:security": "npm run smoke && npm audit",
    "seed:secure": "node scripts/add_employees.js",
    "seed:dev": "cross-env NODE_ENV=development node scripts/seed.js",
    "logs:view": "tail -f logs/application-$(date +%Y-%m-%d).log",
    "logs:audit": "tail -f logs/audit-$(date +%Y-%m-%d).log",
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "dev:debug": "cross-env NODE_ENV=development nodemon --inspect server.js",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "test:integration": "cross-env NODE_ENV=test jest tests/integration/",
    "lint": "eslint src/ tests/ server.js app.js",
    "lint:fix": "eslint src/ tests/ server.js app.js --fix",
    "lint:strict": "eslint src/ tests/ server.js app.js",
    "format": "prettier --write \"tests/**/*.js\"",
    "format:check": "prettier --check \"tests/**/*.js\"",
    "security:audit": "npm audit --audit-level=high",
    "security:fix": "npm audit fix --force",
    "db:migrate": "npx sequelize-cli --config config/config.js db:migrate",
    "db:migrate:undo": "npx sequelize-cli --config config/config.js db:migrate:undo:all",
    "db:seed": "npx sequelize-cli --config config/config.js db:seed:all",
    "db:seed:undo": "npx sequelize-cli --config config/config.js db:seed:undo:all",
    "db:reset": "npm run db:migrate:undo && npm run db:migrate && npm run db:seed",
    "docker:build": "docker build -t hr-attendance-backend .",
    "docker:run": "docker run -p 5000:5000 hr-attendance-backend"
  },
  "keywords": [
    "hr",
    "attendance",
    "nodejs",
    "express",
    "api",
    "production"
  ],
  "author": "Your Team",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.6",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "node-cron": "^3.0.2",
    "sequelize": "^6.33.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xlsx": "^0.18.5",
    "xss-clean": "^0.1.4"
  },
  "optionalDependencies": {
    "node-adodb": "^5.0.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.5.6",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "jest": "^29.6.2",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.11",
    "prettier": "^3.0.2",
    "sequelize-cli": "^6.6.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": "20.x",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.spec.js"
    ]
  }
}
