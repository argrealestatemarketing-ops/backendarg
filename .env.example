PORT=39772
HOST=0.0.0.0
NODE_ENV=development

# Security
JWT_SECRET=replace_with_a_64_plus_char_random_secret
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d
JWT_ALGORITHM=HS256

# CORS
ALLOWED_ORIGINS=http://127.0.0.1:39772,http://10.0.2.2:39772

# PostgreSQL (preferred)
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:5432/hr_attendance
DATABASE_URL_TEST=postgresql://postgres:postgres@127.0.0.1:5432/hr_attendance_test
PGSSLMODE=disable

# Optional explicit PG values (used if DATABASE_URL is not set)
PGHOST=127.0.0.1
PGPORT=5432
PGDATABASE=hr_attendance
PGUSER=postgres
PGPASSWORD=postgres

# Request/security tuning
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15
SESSION_TIMEOUT_MINUTES=30

# Import sources (fingerprint sync endpoint is disabled by default)
FINGERPRINT_DB_PATH=./fingerprint_db/fingerprint.mdb
EMPLOYEE_EXCEL_PATH=./data/employees.xlsx
IMPORT_DEFAULT_PASSWORD=ChangeMe@123

# Scheduler
IMPORT_SCHEDULE_ENABLED=true
IMPORT_SCHEDULE_CRON=*/30 * * * *
IMPORT_JOB_MAX_MINUTES=120

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
